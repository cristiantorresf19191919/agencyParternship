    <style>
        .faq-section .accordion {
            max-width: 800px;
            margin: 3rem auto 0 auto;
            text-align: left;
            font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
        }

        .faq-section .accordion-item {
            background: var(--white, #fff);
            border-radius: 18px;
            margin-bottom: 1.1rem;
            border: none;
            box-shadow: 0 4px 24px 0 rgba(160, 106, 249, 0.10);
            overflow: hidden;
            position: relative;
            transition: box-shadow 0.3s, margin-bottom 0.3s, background 0.3s;
        }

        body.dark-mode .faq-section .accordion-item {
            background: #23243a;
            box-shadow: 0 4px 24px 0 rgba(160, 106, 249, 0.10);
        }

        .faq-section .accordion-item.open {
            background: var(--faq-open-bg, #f8f5ff);
            box-shadow: 0 8px 32px 0 rgba(160, 106, 249, 0.18);
        }

        body.dark-mode .faq-section .accordion-item.open {
            background: #292a3a;
        }

        .faq-section .accordion-item.open::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 5px;
            background: linear-gradient(180deg, #a06af9 0%, #35E4B2 100%);
            border-radius: 5px 0 0 5px;
            z-index: 2;
            transition: background 0.3s;
        }

        .faq-section .accordion-trigger {
            width: 100%;
            padding: 1.4rem 2.5rem 1.4rem 2.2rem;
            background: none;
            border: none;
            text-align: left;
            font-size: 1.18rem;
            font-weight: 700;
            color: var(--text-dark, #23243a);
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 0;
            position: relative;
            transition: background 0.2s, color 0.2s;
            outline: none;
            gap: 1.2rem;
        }

        body.dark-mode .faq-section .accordion-trigger {
            color: #fff;
        }

        .faq-section .accordion-trigger:focus-visible {
            background: #f8f5ff;
            color: #a06af9;
        }

        body.dark-mode .faq-section .accordion-trigger:focus-visible {
            background: #23243a;
            color: #a06af9;
        }

        .faq-section .accordion-trigger .chevron {
            display: inline-block;
            margin-left: 1.2rem;
            font-size: 1.3em;
            color: #a06af9;
            transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1), color 0.3s;
        }

        .faq-section .accordion-item.open .accordion-trigger .chevron {
            transform: rotate(90deg);
            color: #35E4B2;
        }

        .faq-section .accordion-content {
            background: rgba(160, 106, 249, 0.07);
            padding: 0 2.2rem;
            color: var(--text-dark, #23243a);
            line-height: 1.7;
            max-height: 0;
            overflow: hidden;
            opacity: 0;
            transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s, padding 0.3s, background 0.3s;
            margin-top: 0;
            font-size: 1.08rem;
        }

        body.dark-mode .faq-section .accordion-content {
            background: rgba(160, 106, 249, 0.07);
            color: #e9ecef;
        }

        .faq-section .accordion-item.open .accordion-content {
            max-height: 400px;
            opacity: 1;
            padding: 1.3rem 2.2rem 1.7rem 2.2rem;
            margin-top: 0.2rem;
            background: rgba(160, 106, 249, 0.13);
            border-radius: 0 0 16px 16px;
        }

        body.dark-mode .faq-section .accordion-item.open .accordion-content {
            background: rgba(160, 106, 249, 0.13);
        }

        @media (max-width: 600px) {

            .faq-section .accordion,
            .faq-section .accordion-item {
                border-radius: 12px;
            }

            .faq-section .accordion-trigger,
            .faq-section .accordion-content {
                padding-left: 1rem;
                padding-right: 1rem;
            }

            .faq-section .accordion-item.open .accordion-content {
                padding-left: 1rem;
                padding-right: 1rem;
            }
        }

        /* Custom glowing effect for Mouse Follower sphere - MORE SHINY */
        .hero .mf-cursor-inner {
            box-shadow:
                0 0 64px 32px rgba(160, 106, 249, 0.45),
                0 0 128px 48px rgba(53, 228, 178, 0.25),
                0 0 32px 8px #fff,
                0 0 12px 4px #f8549b;
            background: radial-gradient(circle, #fff 70%, #a06af9 90%, #35E4B2 100%);
            opacity: 0.95;
            border: 2px solid #fff;
            transition: box-shadow 0.3s, background 0.3s;
        }

        /* Fixed Floating Action Button with 135° Radial Fan */
        .fab-container {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            z-index: 1000;
            pointer-events: none;
        }

        .fab-main {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            border: none;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-size: 1.4rem;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            position: relative;
            z-index: 1002;
            display: flex;
            align-items: center;
            justify-content: center;
            pointer-events: auto;
        }

        .fab-main:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
        }

        .fab-main:active {
            transform: scale(0.95);
        }

        .fab-main.active {
            transform: rotate(45deg);
            background: linear-gradient(135deg, #a06af9 0%, #35E4B2 100%);
        }

        .fab-main i {
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .fab-main.active i {
            transform: rotate(-45deg);
        }

        .fab-secondary {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 48px;
            height: 48px;
            border-radius: 50%;
            border: none;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            color: white;
            opacity: 0;
            transform: scale(0) translate(0, 0);
            pointer-events: auto;
            text-decoration: none;
            will-change: transform;
        }

        .fab-secondary.language {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
            font-weight: 600;
            font-size: 0.9rem;
        }

        .fab-secondary.theme {
            background: white;
            color: #23243a;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .fab-secondary.whatsapp {
            background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
            box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
            z-index: 1003;
        }

        .fab-secondary.whatsapp i {
            font-size: 1.2rem;
        }

        .fab-secondary:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }

        /* 135° Radial Fan Animation (Counterclockwise) */
        .fab-container.active .fab-secondary {
            opacity: 1;
        }

        .fab-container.active .fab-secondary:nth-child(1) {
            transform: scale(1) translate(-110px, -40px);
            transition-delay: 0.05s;
        }

        .fab-container.active .fab-secondary:nth-child(2) {
            transform: scale(1) translate(-55px, -95px);
            transition-delay: 0.1s;
        }

        .fab-container.active .fab-secondary:nth-child(3) {
            transform: scale(1) translate(15px, -110px);
            transition-delay: 0.15s;
        }

        /* Stable hover states for active buttons */
        .fab-container.active .fab-secondary:hover {
            transform: scale(1.05) translate(var(--translate-x), var(--translate-y));
        }

        .fab-container.active .fab-secondary:nth-child(1):hover {
            transform: scale(1.05) translate(-110px, -40px);
        }

        .fab-container.active .fab-secondary:nth-child(2):hover {
            transform: scale(1.05) translate(-55px, -95px);
        }

        .fab-container.active .fab-secondary:nth-child(3):hover {
            transform: scale(1.05) translate(15px, -110px);
        }

        /* Dark mode adjustments */
        body.dark-mode .fab-secondary.theme {
            background: #23243a;
            color: white;
            box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
        }

        /* Mobile responsive */
        @media (max-width: 768px) {
            .fab-container {
                bottom: 1.5rem;
                right: 1.5rem;
            }

            /* Ensure WhatsApp button is visible on mobile */
            .fab-container.active .fab-secondary:nth-child(1) {
                transform: scale(1) translate(-85px, -30px);
            }

            .fab-container.active .fab-secondary:nth-child(2) {
                transform: scale(1) translate(-45px, -75px);
            }

            .fab-container.active .fab-secondary:nth-child(3) {
                transform: scale(1) translate(10px, -85px);
            }
        }

        /* Accessibility */
        .fab-main:focus,
        .fab-secondary:focus {
            outline: 2px solid #fff;
            outline-offset: 2px;
        }

        /* Screen reader only text */
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

        /* Theme Toggle Styles */
        .theme-toggle-btn {
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
            position: relative;
            width: 60px;
            height: 32px;
            border-radius: 16px;
            transition: all 0.3s ease;
        }

        .theme-toggle-track {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #e9ecef 0%, #f8f9fa 100%);
            border: 2px solid rgba(160, 106, 249, 0.2);
            border-radius: 16px;
            position: relative;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        body.dark-mode .theme-toggle-track {
            background: linear-gradient(135deg, #23243a 0%, #2d2e3a 100%);
            border-color: rgba(160, 106, 249, 0.3);
        }

        .theme-toggle-thumb {
            position: absolute;
            top: 50%;
            left: 0px;
            width: 32px;
            height: 32px;
            background: linear-gradient(135deg, #a06af9 0%, #8e44ad 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 2px 8px rgba(160, 106, 249, 0.3);
            overflow: hidden;
            transform: translateY(-50%);
        }

        body.dark-mode .theme-toggle-thumb {
            transform: translateX(32px) translateY(-50%);
        }

        .theme-toggle-thumb i {
            font-size: 0.9rem;
            color: white;
            transition: all 0.3s ease;
        }

        .theme-toggle-thumb .light-icon {
            opacity: 1;
            transform: scale(1);
        }

        .theme-toggle-thumb .dark-icon {
            opacity: 0;
            transform: scale(0);
        }

        body.dark-mode .theme-toggle-thumb .light-icon {
            opacity: 0;
            transform: scale(0);
        }

        body.dark-mode .theme-toggle-thumb .dark-icon {
            opacity: 1;
            transform: scale(1);
        }

        .theme-toggle-btn:hover .theme-toggle-track {
            border-color: rgba(160, 106, 249, 0.4);
            box-shadow: 0 4px 12px rgba(160, 106, 249, 0.2);
        }

        body.dark-mode .theme-toggle-btn:hover .theme-toggle-track {
            border-color: rgba(160, 106, 249, 0.5);
            box-shadow: 0 4px 12px rgba(160, 106, 249, 0.3);
        }

        body.dark-mode .theme-toggle-btn:hover .theme-toggle-thumb {
            transform: translateX(32px) translateY(-50%) scale(1.05);
        }

        .hero::before {
            z-index: 0 !important;
        }

        #particles-js {
            z-index: 1 !important;
        }

        .hero-content {
            z-index: 2 !important;
            position: relative;
        }

        /* Sticky Header Styles */
        .header.sticky-header-wrapper {
            position: sticky !important;
            top: 0 !important;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(15px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.08);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            transform: translateY(0);
        }

        body.dark-mode .sticky-header-wrapper {
            background: rgba(35, 36, 58, 0.98);
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
        }

        /* Enhanced header styles for sticky behavior */
        .sticky-header-wrapper .nav {
            padding: 1rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .sticky-header-wrapper .logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: #23243a;
            text-decoration: none;
            transition: color 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        body.dark-mode .sticky-header-wrapper .logo {
            color: #fff;
        }

        .sticky-header-wrapper .logo i {
            color: #a06af9;
            font-size: 1.8rem;
            transition: color 0.3s;
        }

        body.dark-mode .sticky-header-wrapper .logo i {
            color: #a06af9;
        }

        /* Light mode header and footer logo icon styling - Violet gradient */
        body:not(.dark-mode) .logo i {
            background: linear-gradient(135deg, #a06af9 0%, #8e44ad 50%, #a06af9 100%) !important;
            -webkit-background-clip: text !important;
            -webkit-text-fill-color: transparent !important;
            background-clip: text !important;
            text-shadow: 0 2px 4px rgba(160, 106, 249, 0.2) !important;
        }

        /* Light mode mobile menu logo icon styling - Violet color */
        body:not(.dark-mode) .mobile-menu-logo i {
            color: #a06af9 !important;
            text-shadow: 0 2px 4px rgba(160, 106, 249, 0.2) !important;
        }

        /* Dark mode mobile menu logo icon styling - White color */
        body.dark-mode .mobile-menu-logo i {
            color: white !important;
        }

        /* Mobile hamburger menu button - Hidden by default, only visible on mobile */
        .mobile-menu-toggle {
            display: none;
            flex-direction: column;
            justify-content: space-between;
            width: 30px;
            height: 24px;
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
            z-index: 10001;
            position: absolute;
            top: 1rem;
            left: 1rem;
        }

        /* Mobile responsive for sticky header */
        @media (max-width: 768px) {
            .sticky-header-wrapper .nav {
                padding: 0.8rem 1rem;
                position: relative;
                justify-content: center;
            }

            .sticky-header-wrapper .nav-links {
                display: none;
            }

            .sticky-header-wrapper .logo {
                font-size: 1.3rem;
                margin: 0;
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
            }

            .mobile-menu-toggle {
                display: flex !important;
                position: absolute;
                left: 1rem;
                z-index: 1001;
            }
        }

        .mobile-menu-toggle .hamburger-line {
            width: 100%;
            height: 3px;
            background: #23243a;
            border-radius: 2px;
            transition: all 0.3s ease;
            transform-origin: center;
        }

        body.dark-mode .mobile-menu-toggle .hamburger-line {
            background: #fff;
        }

        .mobile-menu-toggle.active .hamburger-line:nth-child(1) {
            transform: rotate(45deg) translate(6px, 6px);
        }

        .mobile-menu-toggle.active .hamburger-line:nth-child(2) {
            opacity: 0;
        }

        .mobile-menu-toggle.active .hamburger-line:nth-child(3) {
            transform: rotate(-45deg) translate(6px, -6px);
        }

        /* Mobile Menu Overlay */
        .mobile-menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 10000;
            background: linear-gradient(135deg, rgba(160, 106, 249, 0.15) 0%, rgba(53, 228, 178, 0.1) 100%), #23243a;
            clip-path: circle(0px at 0px 0px);
            transition: clip-path 0.6s cubic-bezier(0.4, 0, 0.2, 1);
            overflow: hidden;
        }

        .mobile-menu-overlay.active {
            clip-path: circle(150vh at 0px 0px);
        }

        .mobile-menu-overlay {
            display: none;
        }

        .mobile-menu-content {
            position: relative;
            height: 100vh;
            display: flex;
            flex-direction: column;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease;
            transition-delay: 0.2s;
        }

        .mobile-menu-overlay.active .mobile-menu-content {
            opacity: 1;
            transform: translateY(0);
        }

        /* Close button */
        .mobile-menu-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 0.5rem;
            transition: background-color 0.3s ease;
            z-index: 10002;
        }

        .mobile-menu-close:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        /* Light mode mobile menu styling */
        body:not(.dark-mode) .mobile-menu-overlay {
            background: linear-gradient(135deg, rgba(160, 106, 249, 0.1) 0%, rgba(53, 228, 178, 0.05) 100%), rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
        }

        body:not(.dark-mode) .mobile-menu-close {
            color: #23243a;
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(160, 106, 249, 0.2);
            box-shadow: 0 4px 12px rgba(160, 106, 249, 0.15);
        }

        body:not(.dark-mode) .mobile-menu-close:hover {
            background: rgba(255, 255, 255, 0.95);
            border-color: rgba(160, 106, 249, 0.3);
            box-shadow: 0 6px 16px rgba(160, 106, 249, 0.2);
        }

        /* Logo section */
        .mobile-menu-logo {
            text-align: center;
            padding: 3rem 2rem 1rem 2rem;
        }

        .logo-container {
            display: inline-block;
            margin-bottom: 1rem;
        }

        /* Menu title */
        .mobile-menu-title {
            text-align: center;
            padding: 0 2rem 2rem 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        body:not(.dark-mode) .mobile-menu-title {
            border-bottom-color: rgba(160, 106, 249, 0.1);
        }

        .mobile-menu-title h2 {
            color: white;
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0;
        }

        body:not(.dark-mode) .mobile-menu-title h2 {
            color: #23243a;
        }

        /* Navigation */
        .mobile-menu-nav {
            flex: 1;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .mobile-menu-nav-item {
            margin-bottom: 0.5rem;
        }

        .mobile-menu-nav-link {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.5rem;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            text-decoration: none;
            color: white;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        body:not(.dark-mode) .mobile-menu-nav-link {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(160, 106, 249, 0.2);
            color: #23243a;
            box-shadow: 0 4px 12px rgba(160, 106, 249, 0.1);
        }

        .mobile-menu-nav-link:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(160, 106, 249, 0.2);
        }

        body:not(.dark-mode) .mobile-menu-nav-link:hover {
            background: rgba(255, 255, 255, 0.95);
            border-color: rgba(160, 106, 249, 0.3);
            box-shadow: 0 8px 20px rgba(160, 106, 249, 0.15);
        }

        .mobile-menu-nav-content {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .mobile-menu-nav-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(160, 106, 249, 0.2);
            border-radius: 12px;
            color: #a06af9;
            font-size: 1.1rem;
        }

        body:not(.dark-mode) .mobile-menu-nav-icon {
            background: rgba(160, 106, 249, 0.1);
        }

        .mobile-menu-nav-text {
            display: flex;
