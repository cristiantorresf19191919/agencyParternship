    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new TypeIt("#typed-subtitle", {
                speed: 48,
                loop: true,
                html: true
            })
                .type("Impulsa tu negocio con <strong>páginas web que convierten</strong>.", { delay: 900 })
                .break({ delay: 400 })
                .type("Landing pages irresistibles para captar más clientes.", { delay: 1200 })
                .pause(1200)
                .delete(null, { delay: 600 })
                .type("Desarrollamos tu presencia digital <strong>en tiempo récord</strong>.", { delay: 900 })
                .pause(1200)
                .delete(null, { delay: 600 })
                .type("Tu web, tu mejor vendedor <strong>24/7</strong>.", { delay: 900 })
                .pause(1200)
                .delete(null, { delay: 600 })
                .go();

            // GSAP number animation for hero stats
            function animateNumber(id, end, duration, suffix = "") {
                const el = document.getElementById(id);
                if (!el) return;
                gsap.fromTo(el, { innerText: 0 }, {
                    innerText: end,
                    duration: duration,
                    ease: "power1.out",
                    snap: { innerText: 1 },
                    onUpdate: function () {
                        el.innerText = Math.floor(el.innerText) + suffix;
                    },
                    onComplete: function () {
                        el.innerText = end + suffix;
                    }
                });
            }
            animateNumber("stat-proyectos", 4, 0.5, "+");
            animateNumber("stat-satisfaccion", 98, 1.4, "%");
            animateNumber("stat-entrega", 15, 1.2, " días");

            // GSAP staggered nav animation ONLY in .hero
            let navAnimated = false;
            const navLinks = document.querySelectorAll('.nav-links li');
            const heroSection = document.querySelector('.hero');
            if (window.gsap && navLinks.length && heroSection) {
                gsap.set(navLinks, { opacity: 0, y: 30, scale: 2, x: 30 });
                const observer = new IntersectionObserver((entries, obs) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting && !navAnimated) {
                            gsap.to(navLinks, {
                                opacity: 1,
                                y: 0,
                                x: 0,
                                scale: 1,
                                duration: 0.6,
                                ease: 'power3.out',
                                stagger: 0.13,
                                delay: 0.2
                            });
                            navAnimated = true;
                            obs.disconnect();
                        }
                    });
                }, { threshold: 0.3 });
                observer.observe(heroSection);
            }

            // particles.js in .hero
            if (window.particlesJS) {
                particlesJS('particles-js', {
                    particles: {
                        number: { value: 80, density: { enable: true, value_area: 900 } },
                        color: { value: ['#fff', '#fff', '#fff'] },
                        shape: { type: 'circle' },
                        opacity: { value: 0.18, random: true },
                        size: { value: 3.5, random: true },
                        line_linked: { enable: true, distance: 110, color: '#fff', opacity: 0.30, width: 1 },
                        move: { enable: true, speed: 1.1, direction: 'none', random: true, straight: false, out_mode: 'out', bounce: false }
                    },
                    interactivity: {
                        detect_on: 'canvas',
                        events: {
                            onhover: { enable: true, mode: 'repulse' },
                            onclick: { enable: false },
                            resize: true
                        },
                        modes: {
                            repulse: { distance: 90, duration: 0.4 }
                        }
                    },
                    retina_detect: true
                });
            }

            // Mobile Menu Functionality with Amazing Clip-Path Animation
            const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
            const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
            const mobileMenuClose = document.getElementById('mobile-menu-close');
            const mobileMenuNavLinks = document.querySelectorAll('.mobile-menu-nav-link');

            function openMobileMenu(e) {
                const rect = mobileMenuToggle.getBoundingClientRect();
                const originX = rect.left + rect.width / 2;
                const originY = rect.top + rect.height / 2;

                // Calculate the maximum radius needed to cover the viewport
                const vw = window.innerWidth;
                const vh = window.innerHeight;
                const dists = [
                    Math.hypot(originX, originY),
                    Math.hypot(vw - originX, originY),
                    Math.hypot(originX, vh - originY),
                    Math.hypot(vw - originX, vh - originY)
                ];
                const maxRadius = Math.max(...dists);

                // Set initial clip-path
                mobileMenuOverlay.style.clipPath = `circle(0px at ${originX}px ${originY}px)`;
                mobileMenuOverlay.style.display = 'block';

                // Trigger the animation
                requestAnimationFrame(() => {
                    mobileMenuOverlay.style.clipPath = `circle(${maxRadius}px at ${originX}px ${originY}px)`;
                    mobileMenuOverlay.classList.add('active');
                    mobileMenuToggle.classList.add('active');
                });

                // Prevent body scroll
                document.body.style.overflow = 'hidden';
            }

            function closeMobileMenu() {
                const rect = mobileMenuToggle.getBoundingClientRect();
                const originX = rect.left + rect.width / 2;
                const originY = rect.top + rect.height / 2;

                // Reverse the animation
                mobileMenuOverlay.style.clipPath = `circle(0px at ${originX}px ${originY}px)`;
                mobileMenuOverlay.classList.remove('active');
                mobileMenuToggle.classList.remove('active');

                // Hide overlay after animation
                setTimeout(() => {
                    mobileMenuOverlay.style.display = 'none';
                    document.body.style.overflow = '';
                }, 600);
            }

            // Event listeners
            if (mobileMenuToggle) {
                mobileMenuToggle.addEventListener('click', openMobileMenu);
            }

            if (mobileMenuClose) {
                mobileMenuClose.addEventListener('click', closeMobileMenu);
            }

            // Close menu when clicking on nav links
            mobileMenuNavLinks.forEach(link => {
                link.addEventListener('click', () => {
                    closeMobileMenu();
                });
            });

            // Close menu when clicking outside
            mobileMenuOverlay.addEventListener('click', (e) => {
                if (e.target === mobileMenuOverlay) {
                    closeMobileMenu();
                }
            });

            // Close menu on escape key
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && mobileMenuOverlay.classList.contains('active')) {
                    closeMobileMenu();
                }
            });

            // Mobile Theme Toggle Functionality
            const mobileThemeToggle = document.getElementById('mobile-theme-toggle');
            const desktopThemeToggle = document.getElementById('theme-toggle');

            // Function to update theme switcher state
            function updateThemeSwitcherState() {
                const isDarkMode = document.body.classList.contains('dark-mode');
                if (mobileThemeToggle) {
                    mobileThemeToggle.setAttribute('aria-pressed', isDarkMode);
                }
                if (desktopThemeToggle) {
                    desktopThemeToggle.setAttribute('aria-pressed', isDarkMode);
                }
            }

            // Function to update theme switcher label
            function updateThemeSwitcherLabel(language = 'es') {
                const themeLabel = document.querySelector('[data-translate="theme-switcher"]');
                if (themeLabel) {
                    themeLabel.textContent = language === 'en' ? 'Theme' : 'Tema';
                }
            }

            if (mobileThemeToggle) {
                mobileThemeToggle.addEventListener('click', function () {
                    // Toggle dark mode class
                    document.body.classList.toggle('dark-mode');

                    // Update HTML lang attribute for theme
                    const isDarkMode = document.body.classList.contains('dark-mode');
                    document.documentElement.setAttribute('data-theme', isDarkMode ? 'dark' : 'light');

                    // Save theme preference
                    localStorage.setItem('theme', isDarkMode ? 'dark' : 'light');

                    // Dispatch theme change event
                    document.dispatchEvent(new CustomEvent('themeChanged'));

                    // Update both theme toggles
                    updateThemeSwitcherState();
                });
            }

            // Sync mobile theme toggle with desktop theme toggle
            if (desktopThemeToggle) {
                desktopThemeToggle.addEventListener('click', function () {
                    updateThemeSwitcherState();
                });
            }

            // Initialize theme switcher state on page load
            updateThemeSwitcherState();
            updateThemeSwitcherLabel(document.documentElement.lang || 'es');

            // Update theme switcher label when language changes
            document.addEventListener('languageChanged', function () {
                const currentLang = document.documentElement.lang || 'es';
                updateThemeSwitcherLabel(currentLang);
            });

            // Update current year in footer
            document.getElementById('current-year').textContent = new Date().getFullYear();

            // Floating Action Button (FAB) with 135° Radial Fan
            const fabContainer = document.getElementById('fab-container');
            const fabMain = document.getElementById('fab-main');
            const fabSecondaries = document.querySelectorAll('.fab-secondary');

            if (fabContainer && fabMain) {
                fabMain.addEventListener('click', function () {
                    const isActive = fabContainer.classList.contains('active');

                    if (isActive) {
                        // Close FAB
                        fabContainer.classList.remove('active');
                        fabMain.classList.remove('active');
                        fabMain.setAttribute('aria-expanded', 'false');

                        // Update icon
                        const icon = fabMain.querySelector('i');
                        icon.className = 'fas fa-plus';
                    } else {
                        // Open FAB
                        fabContainer.classList.add('active');
                        fabMain.classList.add('active');
                        fabMain.setAttribute('aria-expanded', 'true');

                        // Update icon
                        const icon = fabMain.querySelector('i');
                        icon.className = 'fas fa-times';
                    }
                });

                // Handle secondary button clicks
                fabSecondaries.forEach(button => {
                    button.addEventListener('click', function (e) {
                        // Prevent event bubbling for WhatsApp link
                        if (button.classList.contains('whatsapp')) {
                            return; // Allow normal link behavior
                        }

                        e.preventDefault();

                        // Handle language toggle
                        if (button.classList.contains('language')) {
                            const currentLang = document.documentElement.lang || 'es';
                            const newLang = currentLang === 'es' ? 'en' : 'es';

                            document.documentElement.lang = newLang;

                            // Update button text while preserving the screen reader text
                            const srText = button.querySelector('.sr-only');
                            button.innerHTML = '';
                            button.textContent = newLang === 'es' ? 'ES' : 'EN';
                            if (srText) {
                                button.appendChild(srText);
                            }

                            // Dispatch language change event
                            document.dispatchEvent(new CustomEvent('languageChanged'));

                            // Save language preference
                            localStorage.setItem('language', newLang);
                        }

                        // Handle theme toggle button click
                        if (button.classList.contains('theme')) {
                            document.body.classList.toggle('dark-mode');
                            const isDarkMode = document.body.classList.contains('dark-mode');
                            const themeIcon = button.querySelector('i');

                            // Update icon
                            if (isDarkMode) {
                                themeIcon.className = 'fas fa-sun';
                            } else {
                                themeIcon.className = 'fas fa-moon';
                            }

                            // Save theme preference
                            localStorage.setItem('theme', isDarkMode ? 'dark' : 'light');
                            
                            // Dispatch theme change event
                            document.dispatchEvent(new CustomEvent('themeChanged'));
                            
                            // Update theme switcher state
                            updateThemeSwitcherState();
                        }

                        // Close FAB after action
                        setTimeout(() => {
                            fabContainer.classList.remove('active');
                            fabMain.classList.remove('active');
                            fabMain.setAttribute('aria-expanded', 'false');
                            const icon = fabMain.querySelector('i');
                            icon.className = 'fas fa-plus';
                        }, 300);
                    });
                });

                // Close FAB when clicking outside
                document.addEventListener('click', function (e) {
                    if (!fabContainer.contains(e.target)) {
                        fabContainer.classList.remove('active');
                        fabMain.classList.remove('active');
                        fabMain.setAttribute('aria-expanded', 'false');
                        const icon = fabMain.querySelector('i');
                        icon.className = 'fas fa-plus';
                    }
                });

                // Close FAB on escape key
                document.addEventListener('keydown', function (e) {
                    if (e.key === 'Escape' && fabContainer.classList.contains('active')) {
                        fabContainer.classList.remove('active');
                        fabMain.classList.remove('active');
                        fabMain.setAttribute('aria-expanded', 'false');
                        const icon = fabMain.querySelector('i');
                        icon.className = 'fas fa-plus';
                    }
                });
            }

            // Initialize FAB theme icon on page load
            const fabThemeButton = document.querySelector('.fab-secondary.theme');
            if (fabThemeButton) {
                const isDarkMode = document.body.classList.contains('dark-mode');
                const themeIcon = fabThemeButton.querySelector('i');
                if (isDarkMode) {
                    themeIcon.className = 'fas fa-sun';
                } else {
                    themeIcon.className = 'fas fa-moon';
                }
            }

            // Initialize FAB language button on page load
            const fabLanguageButton = document.querySelector('.fab-secondary.language');
            if (fabLanguageButton) {
                const currentLang = document.documentElement.lang || 'es';
                fabLanguageButton.textContent = currentLang === 'es' ? 'ES' : 'EN';

                // Preserve screen reader text
                const srText = fabLanguageButton.querySelector('.sr-only');
                if (srText) {
                    fabLanguageButton.appendChild(srText);
                }
            }
        });
    </script>

    <!-- Fixed Floating Action Button with 135° Radial Fan -->
    <div class="fab-container" id="fab-container">
        <button class="fab-secondary language" id="language-toggle" data-lang="en" aria-label="Cambiar idioma">
            EN
            <span class="sr-only">Toggle language between English and Spanish</span>
        </button>
        <button class="fab-secondary theme" id="theme-toggle" aria-label="Cambiar modo">
            <i class="fas fa-moon"></i>
            <span class="sr-only">Toggle dark/light mode</span>
        </button>
        <a href="https://wa.me/573237992985?text=Hola,%20he%20revisado%20la%20propuesta%20y%20me%20interesa%20proceder."
            class="fab-secondary whatsapp" target="_blank" aria-label="Contactar por WhatsApp">
            <i class="fab fa-whatsapp"></i>
            <span class="sr-only">Open WhatsApp chat</span>
        </a>
        <button class="fab-main" id="fab-main" aria-label="Abrir menú de acciones" aria-expanded="false">
            <i class="fas fa-plus"></i>
            <span class="sr-only">Toggle action menu</span>
        </button>
    </div>

